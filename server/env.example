# Server Configuration
PORT=8000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB: mongodb://localhost:27017/agriai
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/agriai
MONGO_URI=mongodb://localhost:27017/agriai

# JWT Configuration (for future authentication)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# API Configuration
API_VERSION=v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# File Upload Configuration (for future features)
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# Server Configuration
PORT=8000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB: mongodb://localhost:27017/agriai
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/agriai
MONGO_URI=mongodb://localhost:27017/agriai

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# Session Secret
SESSION_SECRET=your-super-secret-session-key-here

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Backend URL
BACKEND_URL=http://localhost:8000

# Google OAuth (Get these from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Configuration
API_VERSION=v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# File Upload Configuration (for future features)
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads
